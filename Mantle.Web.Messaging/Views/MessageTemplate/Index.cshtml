@using Mantle.Web
@using Mantle.Web.Messaging
@using Mantle.Web.Mvc
@using Mantle.Web.Mvc.MantleUI

@{
    string rtlClass = System.Globalization.CultureInfo.CurrentCulture.TextInfo.IsRightToLeft ? "k-rtl" : string.Empty;
}

@inject Microsoft.Extensions.Localization.IStringLocalizer T
@inject Mantle.Web.Configuration.SiteSettings SiteSettings
@inject Mantle.Web.IWebWorkContext WorkContext

@Html.Hidden("GridPageSize", SiteSettings.DefaultGridPageSize)
@Html.Hidden("TinyMCE_RootFolder", "Tenant_" + WorkContext.CurrentTenant.Id)

<div id="grid-section" class="row">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <a data-bind="click: create" class="btn btn-primary">
            <i class="fa fa-plus"></i>
            @T[MantleWebLocalizableStrings.General.Create]
        </a>
    </div>

    <div class="clearfix"></div>
    <br />

    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 @rtlClass">
        <div id="Grid"></div>
    </div>
</div>

<div id="form-section" class="row" style="display:none">
    <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        @using (var panel = Html.MantleUI().Begin(new Panel(state: State.Primary)))
        {
            using (var header = panel.BeginHeader(T[MantleWebLocalizableStrings.General.Details])) { }
            using (var body = panel.BeginBody())
            {
                <form id="form-section-form" role="form">
                    <fieldset>
                        <legend id="form-section-legend"></legend>
                        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                            <div class="form-group">
                                @Html.Label("Name", T[LocalizableStrings.MessageTemplate.Name], new { @class = "control-label" })
                                <div class="input-group">
                                    <span class="input-group-addon">
                                        <i class="fa fa-file"></i>
                                    </span>
                                    @Html.TextBox("Name", null, new { @class = "form-control", data_bind = "value: name" })
                                </div>
                            </div>
                        </div>
                        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                            <div class="form-group">
                                @Html.Label("Subject", T[LocalizableStrings.MessageTemplate.Subject], new { @class = "control-label" })
                                <div class="input-group">
                                    <span class="input-group-addon">
                                        <i class="fa fa-file"></i>
                                    </span>
                                    @Html.TextBox("Subject", null, new { @class = "form-control", data_bind = "value: subject" })
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-10 col-md-10">
                            <div class="form-group">
                                @Html.Label("Body", T[LocalizableStrings.MessageTemplate.Body], new { @class = "control-label" })
                                @Html.TextArea("Body", null, new { @class = "form-control", data_bind = "wysiwyg: body, wysiwygConfig: tinyMCEConfig" })
                            </div>
                        </div>
                        <div class="col-sm-2 col-md-2">
                            <div class="panel panel-default" style="margin-top:23px">
                                <div class="panel-heading">@T[LocalizableStrings.MessageTemplate.Tokens]</div>
                                <div class="panel-body">
                                    <ul id="tokens-list" class="list-unstyled"></ul>
                                </div>
                            </div>
                        </div>
                        <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
                            <div class="checkbox">
                                <label>
                                    @Html.CheckBox("Enabled", new { data_bind = "checked: enabled" }) @T[MantleWebLocalizableStrings.General.Enabled]
                                </label>
                            </div>
                        </div>
                        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                            <div class="form-group pull-right">
                                <button type="button" class="btn btn-default" data-bind="click: cancel">@T[MantleWebLocalizableStrings.General.Cancel]</button>
                                <button type="button" class="btn btn-primary" data-bind="click: save"><i class="fa fa-save"></i> @T[MantleWebLocalizableStrings.General.Save]</button>
                            </div>
                        </div>
                    </fieldset>
                </form>
            }
        }
    </article>
</div>