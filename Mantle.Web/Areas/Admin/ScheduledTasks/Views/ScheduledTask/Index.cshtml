@model ScheduledTask
@{
    string rtlClass = System.Globalization.CultureInfo.CurrentCulture.TextInfo.IsRightToLeft ? "k-rtl" : string.Empty;
}

@Html.Hidden("GridPageSize", SiteSettings.DefaultGridPageSize)

<div id="grid-section" class="row">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 @rtlClass">
        <div id="Grid"></div>
    </div>
</div>

<div id="form-section" class="row" style="display:none">
    <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        @using (var panel = Html.ExtensoUI().Begin(new Panel(state: State.Primary)))
        {
            using (var header = panel.BeginHeader(T[MantleWebLocalizableStrings.General.Details])) { }
            using (var body = panel.BeginBody())
            {
                <form id="form-section-form" role="form">
                    <fieldset>
                        <legend id="form-section-legend"></legend>
                        <div class="form-group">
                            @Html.Label("Name", T[MantleWebLocalizableStrings.ScheduledTasks.Model.Name], new { @class = "control-label col-xs-12 col-sm-4 col-md-3 col-lg-3" })
                            <div class="col-xs-12 col-sm-8 col-md-9 col-lg-9">
                                <p class="form-control-static" data-bind="text: name"></p>
                            </div>
                        </div>
                        <mantle-input asp-for="Seconds" asp-label="@T[MantleWebLocalizableStrings.ScheduledTasks.Model.Seconds]" asp-icon="fa fa-clock-o" />
                        <div class="form-group">
                            <label class="control-label col-xs-12 col-sm-4 col-md-3 col-lg-3"></label>
                            <div class="col-xs-12 col-sm-8 col-md-9 col-lg-9">
                                <mantle-input asp-for="Enabled" asp-label="@T[MantleWebLocalizableStrings.ScheduledTasks.Model.Enabled]" />
                                <mantle-input asp-for="StopOnError" asp-label="@T[MantleWebLocalizableStrings.ScheduledTasks.Model.StopOnError]" />
                            </div>
                        </div>
                        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                            <div class="form-group pull-right">
                                <button type="button" class="btn btn-default" data-bind="click: cancel">@T[MantleWebLocalizableStrings.General.Cancel]</button>
                                <button type="button" class="btn btn-primary" data-bind="click: save"><i class="fa fa-save"></i> @T[MantleWebLocalizableStrings.General.Save]</button>
                            </div>
                        </div>
                    </fieldset>
                </form>
            }
        }
    </article>
</div>