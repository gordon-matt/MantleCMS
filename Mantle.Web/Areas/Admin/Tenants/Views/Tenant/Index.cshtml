@{
    string rtlClass = System.Globalization.CultureInfo.CurrentCulture.TextInfo.IsRightToLeft ? "k-rtl" : string.Empty;
}

<template>
    @Html.Hidden("GridPageSize", SiteSettings.DefaultGridPageSize)

    <div id="grid-section" class="row">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <button type="button" click.delegate="create()" class="btn btn-primary">
                <i class="fa fa-plus"></i>
                @T[MantleWebLocalizableStrings.General.Create]
            </button>
        </div>

        <div class="clearfix"></div>
        <br />
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 @rtlClass">
            <div id="grid"></div>
        </div>
    </div>

    <div id="form-section" class="row" style="display:none">
        <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            @using (var panel = Html.MantleUI().Begin(new Panel(state: State.Primary)))
            {
                using (var header = panel.BeginHeader(T[MantleWebLocalizableStrings.General.Details])) { }
                using (var body = panel.BeginBody())
                {
                    <form id="form-section-form" role="form" class="form-horizontal">
                        <fieldset>
                            <legend id="form-section-legend"></legend>
                            <div class="row">
                                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                                    <div class="form-group">
                                        @Html.Label("Name", T[MantleWebLocalizableStrings.General.Name], new { @class = "control-label col-xs-12 col-sm-4 col-md-3 col-lg-3" })
                                        <div class="col-xs-12 col-sm-8 col-md-9 col-lg-9">
                                            <input name="Name" type="text" class="form-control" value.bind="name" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                                    <div class="form-group">
                                        @Html.Label("Url", T[MantleWebLocalizableStrings.Tenants.Model.Url], new { @class = "control-label col-xs-12 col-sm-4 col-md-3 col-lg-3" })
                                        <div class="col-xs-12 col-sm-8 col-md-9 col-lg-9">
                                            <input name="Name" type="text" class="form-control" value.bind="url" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                                    <div class="form-group">
                                        @Html.Label("Hosts", T[MantleWebLocalizableStrings.Tenants.Model.Hosts], new { @class = "control-label col-xs-12 col-sm-4 col-md-3 col-lg-3" })
                                        <div class="col-xs-12 col-sm-8 col-md-9 col-lg-9">
                                            <input name="Name" type="text" class="form-control" value.bind="hosts" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group pull-right">
                                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                                    <button type="button" class="btn btn-default" click.delegate="cancel()">@T[MantleWebLocalizableStrings.General.Cancel]</button>
                                    <button type="button" class="btn btn-primary" click.delegate="save()"><i class="fa fa-save"></i> @T[MantleWebLocalizableStrings.General.Save]</button>
                                </div>
                            </div>
                        </fieldset>
                    </form>
                }
            }
        </article>
    </div>

</template>