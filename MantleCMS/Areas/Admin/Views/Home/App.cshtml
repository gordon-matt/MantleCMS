@using MantleIdentityLocalizableStrings = Mantle.Identity.LocalizableStrings

<template>
    @*<require from='/aurelia-app/nav-bar'></require>*@

    <require from="/jspm_packages/github/twbs/bootstrap@3.3.7/css/bootstrap.min.css"></require>
    <require from="/jspm_packages/npm/font-awesome@4.7.0/css/font-awesome.min.css"></require>

    <!-- Kendo -->
    <require from="/css/kendo/2014.1.318/kendo.common.min.css"></require>
    <require from="/css/kendo/2014.1.318/kendo.default.min.css"></require>

    @if (System.Globalization.CultureInfo.CurrentCulture.TextInfo.IsRightToLeft)
    {
        <require from="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-rtl/3.4.0/css/bootstrap-rtl.css"></require>
    }

    <require from="/css/dashboard.css"></require>

    <form asp-controller="Account" asp-action="LogOff" method="post" id="logoutForm">
        @Html.AntiForgeryToken()
    </form>

    <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar-collapse-1">
                    <span class="sr-only">@T[LocalizableStrings.Dashboard.ToggleNavigation]</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ImageLink(
                    "/img/logo.png",
                    SiteSettings.SiteName,
                    Url.Action("Index", "Dashboard", new { area = MantleWebConstants.Areas.Admin }),
                    imgHtmlAttributes: new { style = "max-width:200px;margin-top:18px" })
            </div>
            <div class="collapse navbar-collapse" id="navbar-collapse-1">
                @Html.Partial("AdminMenu")
                <ul id="secondary-nav" class="nav navbar-nav navbar-right">
                    @*@Html.ContentZone("AdminLanguageSwitch")*@
                    <li>
                        <a href="/">
                            <i class="fa fa-home"></i>
                            <span>@T[LocalizableStrings.Dashboard.Frontend]</span>
                        </a>
                    </li>
                    <li>
                        <a href="javascript:document.getElementById('logoutForm').submit()">
                            <i class="fa fa-power-off"></i>
                            <span>@T[MantleIdentityLocalizableStrings.LogOut]</span>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    @*<script src="/js/kendo/2014.1.318/kendo.web.min.js"></script>*@

    <div class="container">
        @if (WorkContext.Breadcrumbs.Any())
        {
            <div class="row">
                @Html.Partial("AdminBreadcrumbs")
            </div>
        }

        <div class="page-host">
            <router-view></router-view>
        </div>
    </div>

</template>