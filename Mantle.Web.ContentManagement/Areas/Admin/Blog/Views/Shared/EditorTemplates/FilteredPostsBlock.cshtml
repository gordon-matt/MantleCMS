@model FilteredPostsBlock

<div id="block-content">
    <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
        <div class="form-group">
            @Html.Label("FilterType", T[MantleCmsLocalizableStrings.ContentBlocks.AllPostsBlock.FilterType], new { @class = "col-xs-12 col-sm-4 col-md-3 col-lg-3" })
            <div class="col-xs-12 col-sm-8 col-md-9 col-lg-9">
                @Html.DropDownList(
                     "FilterType",
                     WebEnumExtensions.ToSelectList<FilterType>(),
                     new { @class = "form-control", data_bind = "value: blockModel.filterType" })
            </div>
        </div>
    </div>
    <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
        <div class="form-group" data-bind="visible: filterType() == 1">
            @Html.Label("CategoryId", T[MantleCmsLocalizableStrings.ContentBlocks.AllPostsBlock.CategoryId], new { @class = "col-xs-12 col-sm-4 col-md-3 col-lg-3" })
            <div class="col-xs-12 col-sm-8 col-md-9 col-lg-9">
                <div class="input-group">
                    <span class="input-group-addon">
                        <i class="fa fa-folder"></i>
                    </span>
                    @Html.MantleCMS().BlogCategoryDropDownList(
                        "CategoryId",
                        emptyText: string.Empty,
                        htmlAttributes: new { @class = "form-control", data_bind = "value: blockModel.categoryId" })
                </div>
            </div>
        </div>
        <div class="form-group" data-bind="visible: filterType() == 2">
            @Html.Label("TagId", T[MantleCmsLocalizableStrings.ContentBlocks.AllPostsBlock.TagId], new { @class = "col-xs-12 col-sm-4 col-md-3 col-lg-3" })
            <div class="col-xs-12 col-sm-8 col-md-9 col-lg-9">
                <div class="input-group">
                    <span class="input-group-addon">
                        <i class="fa fa-tags"></i>
                    </span>
                    @Html.MantleCMS().BlogTagDropDownList(
                        "TagId",
                        emptyText: string.Empty,
                        htmlAttributes: new { @class = "form-control", data_bind = "value: blockModel.tagId" })
                </div>
            </div>
        </div>
    </div>
</div>

<script asp-location="None" asp-exclude-from-bundle="true" type="text/javascript">
    @Model.RenderKOScript()
</script>