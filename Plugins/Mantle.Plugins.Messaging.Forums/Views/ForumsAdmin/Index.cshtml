@using Mantle.Plugins.Messaging.Forums
@using Mantle.Plugins.Messaging.Forums.Extensions
@using Mantle.Web.Mvc.MantleUI

@{
    string rtlClass = IsRightToLeft ? "k-rtl" : string.Empty;
}

@Html.Hidden("GridPageSize", SiteSettings.DefaultGridPageSize)

<div id="forum-group-grid-section" class="row">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <a data-bind="click: forumGroupModel.create" class="btn btn-primary">
            <i class="fa fa-plus"></i>
            @T(MantleWebLocalizableStrings.General.Create)
        </a>
    </div>

    <div class="clearfix"></div>
    <br />

    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 @rtlClass">
        <div id="ForumGroupGrid"></div>
    </div>
</div>

<div id="forum-group-form-section" class="row" style="display:none">
    <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        @using (var panel = Html.MantleUI().Begin(new Panel(state: State.Primary)))
        {
            using (var header = panel.BeginHeader(T(MantleWebLocalizableStrings.General.Details))) { }
            using (var body = panel.BeginBody())
            {
                <form id="forum-group-form-section-form" role="form">
                    <fieldset>
                        <legend id="forum-group-form-section-legend"></legend>
                        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                            <div class="form-group">
                                @Html.Label("Name", T(MantleWebLocalizableStrings.General.Name), new { @class = "control-label" })
                                @Html.TextBox("Name", null, new { @class = "form-control", data_bind = "value: forumGroupModel.name" })
                            </div>
                        </div>
                        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                            <div class="form-group">
                                @Html.Label("DisplayOrder", T(MantleWebLocalizableStrings.General.Order), new { @class = "control-label" })
                                @Html.TextBox("DisplayOrder", null, new { @class = "form-control", data_bind = "value: forumGroupModel.displayOrder" })
                            </div>
                        </div>
                        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                            <div class="form-group pull-right">
                                <button type="button" class="btn btn-default" data-bind="click: forumGroupModel.cancel">@T(MantleWebLocalizableStrings.General.Cancel)</button>
                                <button type="button" class="btn btn-primary" data-bind="click: forumGroupModel.save"><i class="fa fa-save"></i> @T(MantleWebLocalizableStrings.General.Save)</button>
                            </div>
                        </div>
                    </fieldset>
                </form>
            }
        }
    </article>
</div>

<div id="forum-grid-section" class="row" style="display:none">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <a data-bind="click: forumModel.create" class="btn btn-primary">
            <i class="fa fa-plus"></i>
            @T(MantleWebLocalizableStrings.General.Create)
        </a>
        <a data-bind="click: forumModel.goBack" class="btn btn-default">
            <i class="fa fa-arrow-left"></i>
            @T(MantleWebLocalizableStrings.General.Back)
        </a>
    </div>

    <div class="clearfix"></div>
    <br />

    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 @rtlClass">
        <div id="ForumGrid"></div>
    </div>
</div>

<div id="forum-form-section" class="row" style="display:none">
    <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        @using (var panel = Html.MantleUI().Begin(new Panel(state: State.Primary)))
        {
            using (var header = panel.BeginHeader(T(MantleWebLocalizableStrings.General.Details))) { }
            using (var body = panel.BeginBody())
            {
                <form id="forum-form-section-form" role="form">
                    <fieldset>
                        <legend id="forum-form-section-legend"></legend>
                        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                            <div class="form-group">
                                @Html.Label("Name", T(MantleWebLocalizableStrings.General.Name), new { @class = "control-label" })
                                @Html.TextBox("Name", null, new { @class = "form-control", data_bind = "value: forumModel.name" })
                            </div>
                        </div>
                        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                            <div class="form-group">
                                @Html.Label("Description", T(MantleWebLocalizableStrings.General.Description), new { @class = "control-label" })
                                @Html.TextArea("Description", null, new { @class = "form-control", data_bind = "value: forumModel.description" })
                            </div>
                        </div>
                        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                            <div class="form-group">
                                @Html.Label("DisplayOrder", T(MantleWebLocalizableStrings.General.Order), new { @class = "control-label" })
                                @Html.TextBox("DisplayOrder", null, new { @class = "form-control", data_bind = "value: forumModel.displayOrder" })
                            </div>
                        </div>
                        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                            <div class="form-group pull-right">
                                <button type="button" class="btn btn-default" data-bind="click: forumModel.cancel">@T(MantleWebLocalizableStrings.General.Cancel)</button>
                                <button type="button" class="btn btn-primary" data-bind="click: forumModel.save"><i class="fa fa-save"></i> @T(MantleWebLocalizableStrings.General.Save)</button>
                            </div>
                        </div>
                    </fieldset>
                </form>
            }
        }
    </article>
</div>